@model greenway2.DTOs.LoginDTO
@{
    ViewData["Title"] = "Excluir Login";
    Layout = "_Layout";
}

<h1>Excluir Login</h1>

<div>
    <p>Você tem certeza que deseja excluir o login com o email "@Model.Email"? Esta ação não pode ser desfeita.</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a href="@Url.Action("Index", "Login")" class="btn btn-secondary">Cancelar</a>
</form>