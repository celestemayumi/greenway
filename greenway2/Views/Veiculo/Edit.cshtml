@model greenway2.DTOs.VeiculoDTO
@{
    Layout = "_Layout";
}

<h1>Editar Veículo</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label for="NumeroSerie">Número de Série</label>
        <input type="text" class="form-control" id="NumeroSerie" name="NumeroSerie" value="@Model.NumeroSerie" required />
    </div>
    <div class="form-group">
        <label for="Latitude">Latitude</label>
        <input type="text" class="form-control" id="Latitude" name="Latitude" value="@Model.Latitude" required />
    </div>
    <div class="form-group">
        <label for="Longitude">Longitude</label>
        <input type="text" class="form-control" id="Longitude" name="Longitude" value="@Model.Longitude" required />
    </div>
    <div class="form-group">
        <label for="TipoVeiculo">Tipo de Veículo (B ou P)</label>
        <input type="text" class="form-control" id="TipoVeiculo" name="TipoVeiculo" value="@Model.TipoVeiculo" required pattern="[BP]" />
    </div>
    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
